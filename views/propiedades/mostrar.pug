extends ../layout/app
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block  content
 

    //- pre= JSON.stringify(propiedad, undefined, 2)
    div(class="py-5")
        h1(class="text-4xl my-10 font-extrabold text-center")= propiedad.titulo 
        div 
            a(href="#" class="font-bold text-gray-600 text-sm") Categorias:   
                span(class="font-normal")= propiedad.categoria.nombre 

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-fuchsia-50 shadow rounded-lg") 
                img(src=`/uploads/${propiedad.imagen}`, alt=`imagen de la propiedad ${propiedad.titulo}`) 
                
                div(class="px-5 py-10 space-y-5 ")
                    p= propiedad.descripcion  

                    h2(class=" text-2xl leading-6 font-bold text-gray-900") Informacion 
                    
                    div(class=" grid grid-cols-1 md:grid-cols-2 gap-4")
                        p(class="text-gray-600 font-bold text-xs") Wc
                            span(class="text-gray-800 block text-lg")= propiedad.wc 
                        p(class="text-gray-600 font-bold text-xs") Habitaciones
                            span(class="text-gray-800 block text-lg")= propiedad.habitaciones 
                        p(class="text-gray-600 font-bold text-xs") Estacionamiento
                            span(class="text-gray-800 block text-lg")= propiedad.estacionamiento 
                        p(class="text-gray-600 font-bold text-xs") Precio
                            span(class="text-gray-800 block text-lg")= propiedad.precio.nombre
            div(class="md:w-1/3  bg-fuchsia-50 shadow rounded-lg")
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Ubicacion 

                div(class="h-96" id="mapa")
                    p(id='lat' class="hidden")= propiedad.lng 
                    p(id='lng' class="hidden")= propiedad.logintud

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Direccion 
                        span( id="calle" class="text-gray-800 block text-xl")= propiedad.calle
                    if !esVendedor
                        h3(class="text-2xl text-center my-10 font-extrabold text-gray-800") Vendedor
                        if usuario
                            if errores 
                                div(class="max-w-md mx-auto my-10") 
                                    each error in errores 
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg
                            form(method="POST")
                                input(type='hidden' name='_csrf' value= csrfToken)

                                div(class='space-y-5')
                                    label(for='mensaje') Mensaje 
                                    textarea(name="mesaje" id="mesaje" class="w-full py-2 border border-gray-300 rounded-lg shadow placeholder-gray-400" placeholder="Coloca tu mensaje aqu√≠")

                                    input(type="submit" value="Enviar Mensaje" class="bg-indigo-600 hover:bg-indigo-200 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm") 
                                
                                
                        
                        else
                            div(class="flex flex-col justify-center gap-2")
                                p Si Deseas Contactar 
                                a(class="text-indigo-600" href="/auth/registrar") Debes de Crear una Cuenta 

block scripts   
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src='/js/mostrarMapa.js')