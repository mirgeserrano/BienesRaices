extends ../layout/admin
   
block content
    h2(class="text-2xl font-extrabold text-center my-10")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-indigo-500 hover:bg-indigo-600 text-sm font-bold text-center text-white  my-5  inline-block  w-full md:w-auto") Volver
    
    div(class="mx-auto max-w-6xl py-5 shadow")
        if mensajes.length 
            ul 
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-900 capitalize") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre
                        p(class="font-bold text-gray-900") Email: 
                            span(class="font-normal")= mensaje.usuario.email
                        p(class="font-bold text-gray-900") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje
                        p(class="font-bold text-gray-900") Fecha de Envio: 
                            span(class="font-normal")=  formatearFecha( mensaje.createdAt)
                             mensaje.createdAt


        else 
            div(class='p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-x-8 gap-4')
            p(class='w-full px-2 py-2 md:py-1  text-center text-xs leading-5 font-semibold rounded cursor-pointer bg-indigo-100 text-indigo-800') No hay propiedades
        