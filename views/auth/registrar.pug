
extends ../layout/index

block content
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
        span(class="font-normal") Raices 
    h2.text-center.text-2xl.font-extrabold=pagina
    
    if errores 
        div(class="max-w-md mx-auto my-10") 
           each error in errores 
             p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    .mt-8.mx-auto.max-w-md    
        .bg-white.py-8.px-4.shadow
              form(method='POST' action="/auth/registro" noValidate).space-y-5
               input(type="hidden" name="_csrf" value=csrfToken)

               div   
                   label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Tu Nombre
                   input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="nombre" type="text" name="nombre" value=usuario?usuario.nombre:'')

               div   
                   label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                   input#emai.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="email" type="email" name="email" value=usuario?usuario.email:'')  

               div   
                   label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password
                   input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="password" type="password" name="password") 

               div   
                   label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repetir_password") Repetir Password
                   input#password-repetir.w-full.px-3.py-2.border.border-gray-250.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type="password" name="repetir_password") 

               .flex.items.center.justify-between 
                  a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión         
                  a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Passaword         

               input(class="w-full bg-indigo-600 hover:bg-indigo-300 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
